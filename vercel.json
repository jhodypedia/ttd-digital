{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "http://151.240.0.221:3000/api/$1" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/login", "dest": "/login.html" },
    { "src": "/register", "dest": "/register.html" },
    { "src": "/deposit", "dest": "/deposit.html" },
    { "src": "/riwayat", "dest": "/riwayat.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
